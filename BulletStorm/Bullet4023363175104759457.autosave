class Bullet {
    PVector pos; 
    PVector spd;
  
    
  
  public Bullet(){
    pos = new PVector(player.x, player.y);
    spd = new PVector(1,0);
  }

  public void create(){
    fill(0,0,255);
    rect(x, y, 10, 10);
  }

  public void update(){
    x += mouseX * spd;
    y += mouseY * spd;
    
  }
}
